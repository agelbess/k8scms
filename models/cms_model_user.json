{
  "cluster": "${cms.cluster}",
  "database": "${cms.database}",
  "collection": "${cms.collection-user}",
  "name": "cms-user",
  "fields": [
    {
      "id": true,
      "name": "_id",
      "type": "oid"
    },
    {
      "name": "password",
      "type": "secret1"
    },
    {
      "name": "name"
    },
    {
      "name": "securityRealm",
      "regex": "^local|ldap$"
    },
    {
      "name": "email",
      "type": "email"
    },
    {
      "name": "phone",
      "type": "phone"
    },
    {
      "name": "permissions",
      "type": "array"
    },
    {
      "name": "roles",
      "type": "array"
    },
    {
      "name": "rolesRelation",
      "type": "array",
      "relation": {
        "cluster": "${cms.cluster}",
        "database": "${cms.database}",
        "collection": "${cms.collection-role}",
        "filter": "{ 'name': { '$in': [{roles}] } }"
      }
    },
    {
      "name": "filters",
      "type": "array"
    }
  ],
  "indexes": [
    {
      "index": {
        "name": "1"
      },
      "options": {
        "unique": true
      }
    },
    {
      "index": {
        "email": "1"
      },
      "options": {
        "unique": true
      }
    }
  ]
}
